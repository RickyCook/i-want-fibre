{
  "manifest_version": 3,

  "name": "I Want Fibre",
  "description": "Automatically check NBN status for property list and detail
    page on realestate.com.au",
  "version": "0.2",

  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["http://www.realestate.com.au/*"],
      "js": ["jquery-1.10.2.js", "rea_content_script.js"]
    },
    {
      "matches": ["http://www.nbnco.com.au/*"],
      "all_frames": true,
      "js": ["jquery-1.10.2.js", "nbn_content_script.js"]
    }
  ],

  "permissions": [
    "http://www.nbnco.com.au/",
    "https://maps.googleapis.com/"
  ]
}
